{
  "name": "generator-swanky",
  "version": "0.0.0-semantically-released",
  "description": "A most elegant and unopinionated documentation framework",
  "author": {
    "name": "Rod Leviton",
    "email": "rod@rodleviton.com",
    "url": "rodleviton.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator"
  ],
  "dependencies": {
    "chalk": "1.0.0",
    "mkdirp": "0.5.1",
    "yeoman-generator": "^0.22.5"
  },
  "devDependencies": {
    "codecov.io": "0.1.6",
    "chai": "3.5.0",
    "cz-conventional-changelog": "1.1.5",
    "cz-customizable": "3.1.0",
    "exact-semver": "1.2.0",
    "ghooks": "1.2.1",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "2.4.5",
    "semantic-release": "4.3.5",
    "sinon": "1.17.3",
    "validate-commit-msg": "2.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rodleviton/generator-swanky.git"
  },
  "scripts": {
    "commit": "git-cz",
    "test": "mocha test/spec/unit/*.spec.js -w",
    "test:single": "istanbul cover _mocha -- -R spec test/spec/unit/*.spec.js",
    "check-coverage": "istanbul check-coverage --statements 0 --branches 0 --functions 0 --lines 0",
    "report-coverage": "cat ./coverage/coverage-final.json | codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "license": "MIT",
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage && exact-semver",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
}
